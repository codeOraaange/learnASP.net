@model Category
<h3>Add Category</h3>

<div class="row" >
    <div class="col">
        <form asp-action="Create" Method="Post">
            <div class="from-group">
                <label asp-for="Name" class="control-label">
                    Name
                </label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"
                    class = "text-danger"
                ></span>
            </div>
            <div class="form-group">
                <button
                type="submit"
                class="btn btn-success"
                >Save</button>
            <div>
        </form>
    </div>
</div>         
